<h1>Listing bookings</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Time</th>
    <th>Sheets</th>
    <th>Washer</th>
    <th>Belongs to</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bookings.each do |booking| %>
  <tr>
    <td><%= booking.date %></td>
    <td><%= booking.time %></td>
    <td><%= booking.sheets %></td>
    <td><%= booking.washer %></td>
    <td><%= booking.belongs_to %></td>
    <td><%= link_to 'Show', booking %></td>
    <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
    <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

